<h1> My Profile</h1>

<%= form_with model: @user, url: me_path, local: true, class: "space-y-6" do |form| %>

  <div>
    <%= form.label :name, class: "block text-sm font-medium text-gray-600" %>
    <%= form.text_field :name, class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500", value: @user.name %>
  </div>

  <div>
    <%= form.label :username, class: "block text-sm font-medium text-gray-600" %>
    <%= form.text_field :username, class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500", value: @user.username %>
  </div>

  <div>
    <%= form.label :email, class: "block text-sm font-medium text-gray-600" %>
    <%= form.email_field :email, class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500", value: @user.email %>
  </div>

  <div>
    <%= form.label :password, class: "block text-sm font-medium text-gray-600" %>
    <%= form.password_field :password, class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500", value: @user.password%>
  </div>

  <div class="mt-4 text-center">
    <%= form.submit "Update", class: "w-full bg-blue-500 text-white py-2 px-4 rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

<% end %>